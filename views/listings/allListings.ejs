<% layout("/layouts/boilerplate") %>
    <body>
        <h3 class="title-quote"><i>Your wonderful journey begins here</i></h3>
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 offset-1">

            <% allListings.forEach(listing=> { %>
                <div class="card card-homepage listing-card" style="width: 17.5rem;">
                    <a href="/listings/<%= listing._id %>">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img"
                            style="height: 12.5rem;">
                    </a>
                    <a href="/listings/<%= listing._id %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listing.title %>
                            </h5>
                            <p class="card-text">
                                <%= listing.title %> <br>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                            </p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </a>
                </div>
                <% }) %>
                    </a>

        </div>

    </body>